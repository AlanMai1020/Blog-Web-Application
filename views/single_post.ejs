<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title><%= post.title %></title>
</head>
<body>
  <%- include("navbar_partial") %>
    <div class="container mt-2 mb-5">
      <h1 class="mb-1"><%= post.title %></h1>
      <div class="text-muted mb-2">
        <%= post.user %> Â· <%= post.date.toLocaleDateString() %>
      </div>
      <div class="mt-4 mb-2">
        <%= post.body %>
      </div>
      <a href="/" class="btn btn-primary btn-sm">Return</a>
      <% if(post.user === username){ %>
        <a href="/post/edit/<%= post._id %>" class="btn btn-danger btn-sm">Edit</a>
      <% } %>
    </div>

    <hr class="my-4">

    <div class="container mt-2 mb-2">
      <div class="row mt-4">
        <div class="col">
            <h2>Comments</h2>
        </div>
      </div>
      <%comments.forEach((comment) =>{%>
        <div class="row mt-2">
          <div class="col-md-4 mb-2">
            <div class="p-1">
                <div class="card-body">
                    <h5 class="card-title"><%= comment.username %></h5>
                    <p class="card-text"><%= comment.body %></p>
                </div>
            </div>
          </div>
        </div>
      <%})%>
      <div class="row">
        <div class="col-4">
          <form action="/post/<%= post._id %>/comment" method="POST">
            <div class="form-group">
              <input required type="text" name="comment" id="comment" class="form-control" placeholder="Add a comment...">
              <button type="submit" class="btn btn-primary btn-sm mt-1">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>