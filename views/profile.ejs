<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>Document</title>
</head>
<body>
    <%- include("navbar_partial") %>
    
    <div class="container-fluid">
        <div class="row">
            <h2 class="text-center mt-2"><%= profile_user%>'s Profile</h2>
        </div>
        <div class="row justify-content-between">

            <!-- First Column -->
            <div class="col-lg-1"></div>

          <!-- Second Column -->
          <div class="col-lg-3">
            <h2 class="text-center mt-3">Posts</h2>
            <% if(post.length == 0) {%>
                <h3 class="text-center mt-1">adwadha</h3>
            <% } %>
            <% post.forEach(single_post => { %>
                <div class="card mt-2 mb-2">                
                    <h5 class="card-header">
                        <a href="/profile/<%= single_post.user %>" class="post_card"><%= single_post.user %> Â· <%= single_post.date.toLocaleDateString() %></a>
                    </h4>                
                    <div class="card-body">
                        <h4 class="card-title"><a class="post_card" href="/post/<%= single_post._id %>"><%= single_post.title %></a></h4>
                        <div class="card-text mb-2"><%= single_post.body %></div>
                    </div>
                </div>
            <% }); %>
          </div>
          
          <!-- Third Column -->
          <div class="col-lg-3">
            <h2 class="text-center mt-3">Comments</h2>
            <% if(comment.length == 0) {%>
                <h3 class="text-center mt-1">dawdawdaw</h3>
            <% } %>
            <% comment.forEach(single_comment => { %>
                <div class="card mt-2 mb-2">                          
                    <div class="card-body">
                        <h4 class="card-title text-center">
                            <%= single_comment.body %>
                        </h4>
                    </div>
                </div>
            <% }); %>
          </div>

          <!-- Fourth Column -->
          <div class="col-lg-1"></div>
        </div>
      </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>