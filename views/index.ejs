<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>Home</title>
</head>
<body>
    <%- include("navbar_partial") %>

    <div class="container">
        <h1 class="mb-4">Posts</h1>
        <a href="/post/new" class="btn btn-success">+ Create New Post</a>
        <%posts.forEach((single_post) =>{%>
            <div class="card mt-4">
                <a class="post_card" href="/profile/<%= single_post.user %>"><h5 class="card-header"><%= single_post.user %> Â· <%= single_post.date.toLocaleDateString() %></h4></a>
                <div class="card-body">
                    <h4 class="card-title"><a class="post_card" href="/post/<%= single_post._id %>"><%= single_post.title %></a></h4>
                    <div class="card-text mb-2"><%= single_post.body %></div>
                    <a class="btn btn-primary btn-sm" href="/post/<%= single_post._id %>">View</a>
                    <% if(username === single_post.user){ %>
                        <form class="d-inline" action="/post/<%= single_post._id %>?_method=DELETE" method="post">
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
        <%})%>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>